rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow read for public profile data
      allow read: if true;
      
      // Allow create only for the authenticated user
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow update for the authenticated user
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow webhook to update only plan-related fields (no auth required)
      // This is safe because only our Stripe webhook (with signature verification) can trigger this
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['plan', 'planUpdatedAt', 'lastPayment', 'stripeCustomerId', 'stripeSubscriptionId', 'stripeSubscriptionStatus']);
      
      // Allow anyone to update ONLY analytics fields (for tracking views/clicks from anonymous visitors)
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['analytics', 'links']);
      
      // Allow delete only for the authenticated user
      allow delete: if request.auth != null && request.auth.uid == userId;

      // Analytics subcollection - Allow anyone to read/write for tracking
      match /analytics/{date} {
        allow read: if true;
        allow create, update: if true;
      }
    }
    
    // Usernames collection (for uniqueness check)
    match /usernames/{username} {
      // Allow read for checking availability
      allow read: if true;
      
      // Allow create only if authenticated and username belongs to user
      allow create: if request.auth != null 
        && request.resource.data.uid == request.auth.uid;
      
      // Only allow delete by the owner
      allow delete: if request.auth != null 
        && resource.data.uid == request.auth.uid;
    }
  }
}
